<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
       <!--  描述指定包中，要把对象交给springmvc容器管理的类 -->
	<context:component-scan base-package="com.yc.springmvc"/>
    
	<!-- 配制 springmv视图处理器的bean -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="suffix" value=".jsp"/><!-- 给视图加上后缀，如 ：视图是success==>success.jsp-->
		<property name="prefix" value="/"/><!-- 给视图加上前缀-->
	</bean>

	<!-- 只拦截处理handler， 其它页面不处理 -->
	<mvc:default-servlet-handler/>
	<mvc:annotation-driven/>
	
	<!-- springmvc拦截器配置 -->
	<mvc:interceptors>
		<!-- 所有的处理都会经过此拦截器处理类
		<bean class="com.yc.springmvc.web.interceptor.HelloInterceptor"/> --><!-- 面向约定编程，约定优于配置 -->
		<ref bean="/hi02"/><!-- 直接调用拦截器处理类的bean -->
		<!-- 配置拦截请求处理 -->
		<mvc:interceptor>
			<mvc:mapping path="/springmvc/hello"/><!-- 指定要进行拦截处理的请求 -->
			<bean class="com.yc.springmvc.web.interceptor.HelloInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>
</beans>